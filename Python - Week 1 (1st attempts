def numbers():
  num_1 = int(input("What is your first number:"))
  num_2 = int(input("What is your second number:"))
  menu = input ('''
    a = +
    b = -
    c = /
    d = *
    e = **
    ''')
  ans = input("What would you like to do?")
  if ans == "a":
    print(num_1 + num_2)
  else ans == "b":
    print(num_1 - num_2)
  else ans == "c":
    print(num_1 / num_2)
  else ans == "d":
    print(num_1 * num_2)
  elsec ans == "e":
    print(num_1 ** num_2)
    
    numbers()
